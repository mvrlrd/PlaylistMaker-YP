<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->

    <style name="TextStyle">
        <item name="android:textColor">?attr/colorAccent</item>

    </style>

    <style name="TrackNameStyle">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ArtistNameStyle">
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">11sp</item>
    </style>

<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="wrap_content"-->
<!--    android:layout_gravity="end|center_vertical"-->
<!--    android:checked="false"-->
<!--    android:fontFamily="@font/ys_display_regular"-->
<!--    android:text="@string/night_mode"-->
<!--    android:textSize="@dimen/small_text_size"-->
<!--    app:showText="false"-->

    <style name="IconStyle">
        <item name="tint">?attr/colorAccent</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:layout_width">@dimen/icon_layout_height</item>
        <item name="android:layout_height">@dimen/icon_layout_height</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <style name="BackButton" parent ="IconStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/main_padding</item>
    </style>

    <style name="SettingsItems">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="FrameLayoutForSettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:padding">@dimen/usual_padding</item>
    </style>


    <style name="BackAndTitleStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="tint">?attr/colorAccent</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorAccent</item>
    </style>


</resources>