<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include layout="@layout/back_button"/>

            <TextView
                style="@style/TitleStyle"
                android:text="@string/settings" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:padding="@dimen/usual_padding">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:checked="false"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/night_mode"
            android:textSize="@dimen/small_text_size"
            app:showText="false" />
    </FrameLayout>

    <FrameLayout style="@style/FrameLayoutForSettingsItemStyle">

        <TextView
            style="@style/SettingsItems"
            android:text="@string/share" />

        <ImageButton
            android:id="@+id/shareButton"
            style="@style/IconStyle"
            android:src="@drawable/ic_share_icon" />
    </FrameLayout>

    <FrameLayout style="@style/FrameLayoutForSettingsItemStyle">

        <TextView
            style="@style/SettingsItems"
            android:text="@string/support" />

        <ImageButton
            android:id="@+id/support_button"
            style="@style/IconStyle"
            android:src="@drawable/ic_support_icon" />
    </FrameLayout>

    <FrameLayout style="@style/FrameLayoutForSettingsItemStyle">

        <TextView
            style="@style/SettingsItems"
            android:text="@string/agreement" />

        <ImageButton
            android:id="@+id/agreement_button"
            style="@style/IconStyle"
            android:src="@drawable/ic_agreement_icon" />
    </FrameLayout>
</LinearLayout>