<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:navigationIcon="@drawable/ic_arrow_icon"
        app:buttonGravity="center_vertical"
        app:title="@string/settings"
        app:titleTextAppearance="@style/TitleStyle">

    </com.google.android.material.appbar.MaterialToolbar>

    <FrameLayout style="@style/FrameLayoutForSettingsItemStyle">

        <TextView
            style="@style/SettingsItems"
            android:text="@string/night_mode" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:checked="false"
            android:width="32dp"
            android:height="18dp"
            android:fontFamily="@font/ys_display_regular"
            app:showText="false"
            style="@style/SwitchStyle"/>
    </FrameLayout>

    <FrameLayout style="@style/FrameLayoutForSettingsItemStyle">

        <TextView
            style="@style/SettingsItems"
            android:text="@string/share" />

        <ImageButton
            android:id="@+id/shareButton"
            style="@style/IconStyle"
            android:src="@drawable/ic_share_icon" />
    </FrameLayout>

    <FrameLayout style="@style/FrameLayoutForSettingsItemStyle">

        <TextView
            style="@style/SettingsItems"
            android:text="@string/support" />

        <ImageButton
            android:id="@+id/support_button"
            style="@style/IconStyle"
            android:src="@drawable/baseline_support_agent_24" />
    </FrameLayout>

    <FrameLayout style="@style/FrameLayoutForSettingsItemStyle">

        <TextView
            style="@style/SettingsItems"
            android:text="@string/agreement" />

        <ImageButton
            android:id="@+id/agreement_button"
            style="@style/IconStyle"
            android:src="@drawable/ic_agreement_icon" />
    </FrameLayout>
</LinearLayout>