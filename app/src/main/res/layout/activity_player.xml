<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"
        />


    <ImageButton
        android:id="@+id/backButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_icon" />

    <ImageView
        android:id="@+id/albumImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintTag="imageViewTag"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp"
        app:srcCompat="@drawable/album_placeholder_image" />

    <TextView
        android:id="@+id/trackName"
        style="@style/TitleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="Переживу"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/albumImageView" />

    <TextView
        android:id="@+id/singerName"
        style="@style/TitleStyle"
        android:textSize="14sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:text="Монеточка"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/rightBorder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/trackName" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button"
        android:layout_width="51dp"
        android:layout_height="51dp"
        app:fabCustomSize="51dp"
        app:tint="@color/white"
        android:layout_marginTop="132dp"
        android:backgroundTint="@color/bledniyFont"
        android:src="@drawable/baseline_add_to_photos_24"
        app:layout_constraintHorizontal_bias="0.5"
        app:maxImageSize="23dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/leftBorder"
        app:layout_constraintTop_toBottomOf="@+id/albumImageView"
        app:borderWidth="0dp"
        android:clickable="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playButton"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/baseline_play_arrow_24"
        app:fabCustomSize="83dp"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/likeButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:maxImageSize="50dp"
        app:tint="@color/white"
        app:borderWidth="0dp"
        android:clickable="true"
        app:rippleColor="@color/white"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/likeButton"
        android:layout_width="51dp"
        android:layout_height="51dp"
        app:tint="@color/white"
        app:fabCustomSize="51dp"
        app:maxImageSize="23dp"
        android:backgroundTint="@color/bledniyFont"
        android:src="@drawable/baseline_favorite_border_24"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintHorizontal_bias="0.5"
        app:borderWidth="0dp"
        android:clickable="true"
        />

    <!--заголовки инфо-->

    <TextView
        android:id="@+id/durationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginTop="84dp"
        android:layout_marginStart="@dimen/usual_padding"
        style="@style/InfoTextStyle"
        android:text="@string/duration" />

    <TextView
        android:id="@+id/albumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/durationTitle"
        android:layout_marginTop="@dimen/info_padding"
        android:layout_marginStart="@dimen/usual_padding"
        android:text="@string/album"
        style="@style/InfoTextStyle"/>

    <TextView
        android:id="@+id/yearTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albumTitle"
        android:layout_marginTop="@dimen/info_padding"
        android:layout_marginStart="@dimen/usual_padding"
        android:text="@string/year"
        style="@style/InfoTextStyle" />

    <TextView
        android:id="@+id/genreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearTitle"
        android:layout_marginTop="@dimen/info_padding"
        android:layout_marginStart="@dimen/usual_padding"
        android:text="@string/genre"
        style="@style/InfoTextStyle" />
    <TextView
        android:id="@+id/countryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genreTitle"
        android:layout_marginTop="@dimen/info_padding"
        android:layout_marginStart="@dimen/usual_padding"
        android:text="@string/country"
        style="@style/InfoTextStyle" />

<!--инфо трека-->

    <TextView
        android:id="@+id/durationParam"
        style="@style/InfoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        tools:text="5:31"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/usual_padding"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/albumParam"
        style="@style/InfoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_padding"
        android:layout_marginEnd="@dimen/usual_padding"
        tools:text="Россия"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/durationParam" />

    <TextView
        android:id="@+id/yearParam"
        style="@style/InfoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_padding"
        android:layout_marginEnd="@dimen/usual_padding"
        tools:text="2022"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albumParam" />

    <TextView
        android:id="@+id/genreParam"
        style="@style/InfoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_padding"
        android:layout_marginEnd="@dimen/usual_padding"
        tools:text="Рок"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearParam" />

    <TextView
        android:id="@+id/countryParam"
        style="@style/InfoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_padding"
        android:layout_marginEnd="@dimen/usual_padding"
        tools:text="Россия"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genreParam" />

<!--    время трека-->

    <TextClock
        android:id="@+id/clockTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/playButton"
        app:layout_constraintStart_toStartOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/playButton"
        style="@style/ClockStyle"
        tools:text="0:40" />


</androidx.constraintlayout.widget.ConstraintLayout>