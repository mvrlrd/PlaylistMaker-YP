<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/searchToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_icon"
        app:buttonGravity="center_vertical"
        app:title="@string/search"
        app:titleTextAppearance="@style/TitleStyle">

    </com.google.android.material.appbar.MaterialToolbar>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/usual_padding"
        android:paddingEnd="@dimen/usual_padding">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_height"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/et_style"
            android:backgroundTint="?attr/button_color"
            android:drawableStart="@drawable/ic_search_icon"
            android:drawablePadding="11dp"
            android:drawableTint="?attr/search_icons_color"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:singleLine="true"
            android:textColor="?attr/button_text_color"
            android:textColorHint="?attr/search_icons_color"
            android:textSize="@dimen/small_text_size" />

        <ImageButton
            android:id="@+id/clearTextButton"
            style="@style/XStyle"
            android:src="@drawable/ic_free_icon_font_cross"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <ProgressBar android:id="@+id/progressBar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="148dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/progress_bar_color"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/youSearchedTitle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"
                android:text="@string/you_searched"
                android:textAlignment="center"
                android:textColor="?attr/day_night_background"
                android:textSize="19sp"
                android:visibility="gone" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tracksRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="13dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/clearHistoryButton"
                        style="@style/RefreshButtonStyle"
                        android:layout_marginBottom="50dp"
                        android:text="@string/clear_history" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </ScrollView>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <LinearLayout
           android:id="@+id/errorPlaceHolder"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:orientation="vertical"
           android:paddingTop="110dp"
           android:visibility="gone">

           <ImageView
               android:layout_gravity="center_horizontal"
               android:id="@+id/placeholderImage"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/connection_error"
               android:paddingBottom="20dp"/>

           <TextView android:id="@+id/placeholderMessage"
               android:paddingStart="@dimen/standart_padding"
               android:paddingEnd="@dimen/standart_padding"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:textAlignment="center"
               android:textSize="19sp"
               android:textColor="@color/track_name_color"
               android:textStyle="bold"
               android:text="@string/error_connection"/>

           <com.google.android.material.button.MaterialButton
               android:id="@+id/refreshButton"
               android:text="@string/refresh"
               style="@style/RefreshButtonStyle"
               />
       </LinearLayout>
    </FrameLayout>
</LinearLayout>