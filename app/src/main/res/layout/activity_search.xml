<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include layout="@layout/back_button"/>

            <TextView
                style="@style/TitleStyle"
                android:text="@string/search" />

        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/usual_padding"
          >

            <EditText
                android:backgroundTint="@color/colorPrimaryDay"
                android:background="@drawable/et_style"
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="start|center_vertical"
                android:hint="@string/search"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1"
                android:textColorHint="?attr/colorSwitchThumbNormal"
                android:textColor="?attr/colorAccent"
                android:textSize="@dimen/small_text_size"
                android:drawableStart="@drawable/ic_search_icon"
                android:drawablePadding="11dp"
                android:paddingStart="15dp"


                />

            <ImageButton
                android:id="@+id/clearTextButton"
                style="@style/XStyle"
                android:src="@drawable/ic_free_icon_font_cross"
                android:visibility="gone" />

        </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>