<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mediateka.playlists.addplaylist.AddPlaylistFragment">

 <androidx.constraintlayout.widget.Guideline
     android:id="@+id/leftBorder"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     app:layout_constraintGuide_percent="0.06"/>

 <androidx.constraintlayout.widget.Guideline
     android:id="@+id/rightBorder"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     app:layout_constraintGuide_percent="0.94"
     />

 <com.google.android.material.appbar.MaterialToolbar
     android:id="@+id/backButton"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="20dp"
     android:layout_marginStart="20dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:navigationIcon="@drawable/ic_arrow_icon"
     app:buttonGravity="center_vertical"
     app:title="Новый плейлист"
     app:titleTextColor="?attr/day_night_background"
     />

 <ImageView
     android:id="@+id/albumImageView"
     android:layout_width="0dp"
     android:layout_height="0dp"
     android:scaleType="centerCrop"
     app:layout_constraintDimensionRatio="h,1:1"
     app:layout_constraintEnd_toStartOf="@+id/rightBorder"
     app:layout_constraintStart_toEndOf="@id/leftBorder"
     app:layout_constraintTag="imageViewTag"
     app:layout_constraintTop_toTopOf="parent"
     android:layout_marginTop="82dp"
     android:src="@drawable/playlist_image_placeholder"
     android:backgroundTint="?attr/day_night_text"/>


 <FrameLayout
     android:id="@+id/frameLayout"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="32dp"
     android:paddingStart="@dimen/usual_padding"
     android:paddingEnd="@dimen/usual_padding"
     app:layout_constraintTop_toBottomOf="@+id/albumImageView"
     tools:layout_editor_absoluteX="0dp">

  <EditText
      android:id="@+id/nameEt"
      android:layout_width="match_parent"
      android:layout_height="54dp"
      android:layout_gravity="center"
      android:layout_margin="0dp"
      android:layout_marginTop="32dp"
      android:background="@drawable/rectangle_border"
      android:drawablePadding="11dp"
      android:drawableTint="?attr/search_icons_color"
      android:hint="Введите текст"
      android:imeOptions="actionDone"
      android:inputType="text"
      android:maxLines="1"

      android:padding="8dp"
      android:paddingStart="15dp"
      android:singleLine="true"

      android:textColor="?attr/button_text_color"
      android:textColorHint="?attr/search_icons_color"
      android:textSize="@dimen/small_text_size"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.625"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/albumImageView"
      tools:text="Название" />

  <ImageButton
      android:id="@+id/clearTextButton"
      style="@style/XStyle"
      android:src="@drawable/ic_free_icon_font_cross"
      android:visibility="visible" />
 </FrameLayout>


 <EditText
     android:id="@+id/descriptionEt"
     android:layout_width="match_parent"
     android:layout_height="54dp"
     android:layout_gravity="center"
     android:layout_margin="16dp"
     android:layout_marginTop="16dp"
     android:background="@drawable/rectangle_border"
     android:hint="Введите текст"

     android:padding="8dp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/frameLayout"
     tools:text="Описание" />


